{
  "name": "zama-hello-fhevm",
  "version": "0.1.0",
  "private": true,
  "description": "Hello FHEVM tutorial repo for Zama Devnet using Hardhat + TypeScript.",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "hardhat test",
